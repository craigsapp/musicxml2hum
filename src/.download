#!/usr/bin/perl

use strict;
my $baseaddr = "https://raw.githubusercontent.com/craigsapp/humlib/master";
my @files = qw(src/humlib.cpp src/pugixml.cpp tools/musicxml2hum.cpp);

my $curl = `which curl`;
my $wget = `which wget`;

chomp $curl;
chomp $wget;

foreach my $file (@files) {
	getFile($file);
}

sub getFile {
	my ($file) = @_;
	my $basename = $file;
	$basename =~ s/.*\///;
	my $command;
	if ($wget !~ /^\s*$/) {
		$command = "$wget \"$baseaddr/$file\" -O \"$basename\" 2> /dev/null";
		`$command`;
	} else {
		$command = "$curl --remote-name \"$baseaddr/$file\" 2> /dev/null";
		`$command`;
	}
	print "$command\n";
}


